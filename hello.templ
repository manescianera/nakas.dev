templ HelloTemplate() {
    <style type="text/css">
        html {
            overflow-y: hidden;
        }
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;

            background-color: #575279;
            color: #797593;
            font-family: "JetBrains Mono", monospace;
            height: 100vh;
        }
